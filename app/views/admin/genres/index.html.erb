<div class="container">
  <div class="row mt-5">
     <h4 class="ml-5 bg-light">ジャンル一覧・追加</h4>
  </div>
  <div class="row mt-5">
    <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
      <%= f.label :ジャンル名 %>
      <%= f.text_field :name %>
      <%= f.submit "新規登録", class:"btn btn-success" %>
    <% end %>
  </div>

  <div class="row mt-5">
    <div class="col-4">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>　　ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集",edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>