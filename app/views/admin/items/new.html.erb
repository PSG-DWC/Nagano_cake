<div class= "container col-xs-6">
  <div class= "row">
    <div class= "col-xs-12 mt-3">
      <h4>商品新規登録</h4>
      <%= form_with model: [:admin, @item], local:true do |f| %>
        <table>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品画像 %></th>
              <th><%= f.attachment_field :image %></th>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品名 %></th>
              <th><%= f.text_field :name, placeholder:"商品名" %></th>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :商品説明 %></th>
              <th><%=f.text_area :introduction, placeholder:"ここに説明文を記述します"%></th>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :ジャンル %></th>
              <th><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></th>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :販売ステータス %></th>
              <td>
                <%= f.radio_button :is_active, true, checked: true %>
                <%= f.label :is_active, "販売中" %>
                <%= f.radio_button :is_active, false %>
                <%= f.label :is_active, "販売停止中" %>
              </td>
            </div>
          </tr>
          <tr>
            <div class="form-action">
              <th><%= f.submit "新規登録", class:"btn btn-success" %></th>
            </div>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>