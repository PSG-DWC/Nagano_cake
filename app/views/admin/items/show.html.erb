<div class="container col-xs-6">
  <div class="row">
　  <div class="col-xs-12 mt-3">
 　  　<h3><strong>商品詳細</strong> </h3>
 　　</div>
  </div>
    <div class="row align-items-center m-4">
      <div class="col-lg text-center mb-4">
        <%= attachment_image_tag @item, :image, size:'300x250' %>
      </div>
        <div class="col-lg">
          <table class="table">
            <tr>
              <th>商品名</th>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <th>商品詳細</th>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <th>税込価格<br>(税抜価格)</th>
              <td><%= (@item.price * 1.1).floor %> (<%= @item.price %>)円</td>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <td>
               <%= @item.is_active == true ? "販売中" : "販売停止中" %>
              </td>
            </tr>
          </table>
          <div class="d-flex justify-content-around">
            <p><%= link_to "編集する",edit_admin_item_path(@item), class:"btn btn-success" %></p>
            <p><%= link_to "商品一覧へ戻る", admin_items_path, class:"btn btn-primary" %></p>
          </div>
        </div>
      </div>
    </div>
</div>