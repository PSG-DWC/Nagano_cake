<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="offset-md-2" style="background-color: #eeeeee; font-weight: bold" >会員情報編集</h5>

      <%= form_with model: @customer,url: customers_path, local:true do |f| %>

        <div class="form_group" style="display: flex">
          <div class="col-md-3">氏名</div>
          <div class="col-md-3"><%=f.text_field :last_name %></div>
          <div class="col-md-3"><%=f.text_field :first_name %></div>
        </div>

        <div class="form_group" style="display: flex">
          <div class="col-md-3">フリガナ</div>
          <div class="col-md-3"><%=f.text_field :last_name_kana %></div>
          <div class="col-md-3"><%=f.text_field :first_name_kana %></div>
        </div>

        <div class="form_group" style="display: flex">
          <div class="col-md-3"><%=f.label :post_code, "郵便番号" %></div>
          <div class="col-md-3"><%=f.text_field :post_code %></div>
        </div>

        <div class="form_group" style="display: flex">
          <div class="col-md-3"><%=f.label :address, "住所" %></div>
          <div class="col-md-3"><%=f.text_field :adress %></div>
        </div>

        <div class="form_group" style="display: flex">
          <div class="col-md-3"><%=f.label :phone_namber, "電話番号" %></div>
          <div class="col-md-3"><%=f.text_field :phone_namber %></div>
        </div>

        <div class="form-group" style="display: flex">
          <div class="col-md-3"><%= f.label :email, "メールアドレス" %></div>
          <div class="col-md-3"><%= f.email_field :email %></div>
        </div>
        <div  class="form-group" style="display: flex">
          <div class="col-md-4 offset-md-3"><%= f.submit "変更を保存", class: "btn btn-success" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>