<div class="container">
  <div class="row mt-5 mb-3">
    <h3 class="bg-light offset-1">注文情報入力</h3>
  </div>
  <div class="row mt-3">
      <%= form_with model: @order, local: true do |f| %>
       <h4 class="d-inline-block"><strong>支払方法</strong></h4><br>
       <div class="ml-5">
          <%= f.radio_button :payment_method, :credit_card, checked: true %>
          <%= f.label :クレジットカード %><br>
          <%= f.radio_button :payment_method, :transfer %>
          <%= f.label :銀行振込 %>
       </div>
       <h4 class="d-inline-block mt-3"><strong>お届け先</strong></h4><br>
       <div class="ml-5">
          <%= f.radio_button :address_option, 0, checked: true %>
          <%= f.label :ご自身の住所 %><br>
          <div class="ml-5">
            <%= f.label :会員の住所表示カレントユーザーポストコード、カレントユーザーアドレス、カレントユーザーネーム %>
          </div>


          <%= f.radio_button :address_option, 1 %>
          <%= f.label :登録済住所から選択 %><br>
          <div class="ml-5">
            <%= f.select :address_book, options_for_select([["mapメソッドを使い作ってみる","perfect_match"],["前方一致","forward_match"],["後方一致","backword_match"],["部分一致","partial_match"]]) %><br>
          </div>

          <div class="mt-3">
            <%= f.radio_button :address_option, 2 %>
            <%= f.label :新しいお届け先 %>
            <div class="ml-5">
              <table>
                <tr>
                  <td><%= f.label :郵便番号（ハイフンなし） %></td>
                  <td><%= f.text_field :post_cord %></td>
                </tr>
                 <tr>
                  <td><%= f.label :住所 %></td>
                  <td><%= f.text_field :address,  size:60 %></td>
                </tr>
                 <tr>
                  <td><%= f.label :宛名 %></td>
                  <td><%= f.text_field :name %></td>
                </tr>
              </table>
            </div>
          </div>

       </div>
       <div class="text-center mt-5">
         <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
       </div>

      <% end %>
  </div>
  <div class="row">

  </div>
</div>