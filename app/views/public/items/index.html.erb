<div class="container">
  <div class="row mt-5">
    <div class="col-2">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="text-center">ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre|  %>
            <tr>
              <td><%= link_to genre.name, items_path(sort:"#{genre.name}") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-10 pl-3">
      <section>
        <h4><%= @index_title %>(全<%= @items_count %>件)</h4>
        <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
            <div class="mt-5 mr-3">
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :image, size: "200x100" %><br>
                <%= item.name %><br>
              <% end %>
              ¥<%= (item.price*1.1).floor %>
            </div>
          <% end %>
        </div>
        <div class="mt-5">
          <%= paginate @items %>
        </div>
      </section>
    </div>
  </div>
</div>